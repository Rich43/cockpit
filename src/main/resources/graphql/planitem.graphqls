interface PlanItemBase {
    snapshotId: ID!
    id: ID!
    ownerPersonnelId: Int!
    name: String!
    description: String
    lifecycleStatus: String!
}

type PlanItem implements PlanItemBase {
    snapshotId: ID!
    id: ID!
    ownerPersonnelId: Int!
    name: String!
    description: String
    lifecycleStatus: String!
}

extend type Query {
    findAllPlanItems(snapshotId: ID!): [PlanItem]!
    findPlanItem(snapshotId: ID!, id: ID!) : PlanItem!
}